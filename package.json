{
  "name": "cypress-automaton",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:reports": "rm -rf cypress/reports",
    "clean:logs": "rm -f cypress/logs/test-execution.log",
    "create:dirs": "mkdir -p cypress/reports/json cypress/logs",
    "cypress:run": "cypress run || true",
    "merge:reports": "mochawesome-merge \"cypress/reports/json/*.json\" > cypress/reports/mochawesome.json",
    "generate:html": "marge cypress/reports/mochawesome.json --reportDir cypress/reports --inline --charts true --overwrite true",
    "cleanup:jsons": "rm -rf cypress/reports/json cypress/reports/mochawesome.json",
    "report": "npm run clean:reports && npm run clean:logs && npm run create:dirs && npm run cypress:run && npm run merge:reports && npm run generate:html && npm run cleanup:jsons",
    "test": "npm run report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^22.2.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "@cypress/browserify-preprocessor": "^3.0.2",
    "browserify": "^17.0.1",
    "cypress": "^14.5.3",
    "cypress-mochawesome-reporter": "^4.0.0",
    "log4js": "^6.9.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
